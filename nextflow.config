manifest {
    mainScript = 'main.nf'
}

// default parameters

params {
    cores = '4'
    memory = '12'
    help = false
    profile = false

    // inputs
    nano = ''
    illumina = ''
    fasta = ''
    list = false

    // parameters
    gsize = '20' 
    model = 'r941_min_high'

    // databases
    sour_db = false
    virsorter_db = false

    // workflow adjustments
    assemblerLong = 'spades'

    // folder structure
    output = 'results'
    virusdir = '02-Viruses'
    assemblydir = '01-Assembly'
    readQCdir = '00-Read-quality'
}

profiles {
  
    standard { includeConfig 'configs/local.config' }

    googlegenomics { includeConfig 'configs/googlegenomics.config' }
      
} 


